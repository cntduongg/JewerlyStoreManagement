<section class="categories-section">
    <div class="section-header">
        <span class="section-label">SẢN PHẨM MỚI NHẤT</span>
        <h2 class="section-title">Bộ Sưu Tập Mới</h2>
        <p class="section-subtitle">20 sản phẩm mới nhất được cập nhật liên tục</p>
    </div>
    <div class="categories-carousel">
        @if (Model.Products != null && Model.Products.Any())
        {
            <!-- First set -->
            @foreach (var product in Model.Products)
            {
                <div class="category-card">
                    <div class="category-image-wrapper">
                        @if (!string.IsNullOrEmpty(product.Mainimageurl))
                        {
                            <img src="~/images/@product.Mainimageurl"
                                 alt="@product.Productname"
                                 class="product-image"
                                 onerror="this.src='/images/placeholder.jpg'" style="width:100%; height:350px; object-fit:cover; border-radius: 20px;" />
                        }
                        else
                        {
                            <div class="category-image"></div>
                        }
                        <div class="category-overlay">
                            <a asp-page="/ProductDetail" asp-route-id="@product.Productid" class="category-btn">Xem chi tiết →</a>
                        </div>
                    </div>
                    <div class="category-info">
                        <h3>@product.Productname</h3>
                        <p>@product.Sellingprice.ToString("N0") VNĐ</p>
                    </div>
                </div>
            }

            <!-- Duplicate set for infinite scroll -->
            @foreach (var product in Model.Products)
            {
                <div class="category-card">
                    <div class="category-image-wrapper">
                        @if (!string.IsNullOrEmpty(product.Mainimageurl))
                        {
                            <img src="@product.Mainimageurl" alt="@product.Productname" style="width:100%; height:350px; object-fit:cover; border-radius: 20px;" />
                        }
                        else
                        {
                            <div class="category-image"></div>
                        }
                        <div class="category-overlay">
                            <a asp-page="/ProductDetail" asp-route-id="@product.Productid" class="category-btn">Xem chi tiết →</a>
                        </div>
                    </div>
                    <div class="category-info">
                        <h3>@product.Productname</h3>
                        <p>@product.Sellingprice.ToString("N0") VNĐ</p>
                    </div>
                </div>
            }
        }
        else
        {
            <div style="text-align: center; padding: 4rem; color: rgba(255,255,255,0.6);">
                <p>Không có sản phẩm để hiển thị</p>
            </div>
        }
    </div>
</section>

