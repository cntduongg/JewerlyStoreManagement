@section Scripts {
    <script>
        // Particles Effect
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 30;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 20 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            createParticles();
        });
    </script>

    <style>
        /* ==================== ABOUT SPECIFIC STYLES ==================== */
        .min-vh-80 {
            min-height: 80vh;
        }

        /* Story Section */
        .luxury-story-section {
            padding: 6rem 0;
            background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
        }

        .story-image-container {
            position: relative;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(0,0,0,0.1);
        }

        .story-image {
            width: 100%;
            height: 600px;
            object-fit: cover;
        }

        .story-badge {
            position: absolute;
            bottom: 2rem;
            right: 2rem;
            background: linear-gradient(135deg, var(--luxury-gold), var(--luxury-gold-light));
            padding: 1.5rem;
            border-radius: 15px;
            text-align: center;
            color: var(--luxury-dark);
            box-shadow: 0 10px 30px rgba(212, 175, 55, 0.3);
        }

        .badge-year {
            font-size: 2rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
        }

        .badge-text {
            font-size: 0.8rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.1em;
        }

        .story-content {
            margin-top: 2rem;
        }

            .story-content p {
                font-size: 1.1rem;
                line-height: 1.8;
                color: #666;
                margin-bottom: 2rem;
            }

        .story-features {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .feature-item {
            display: flex;
            align-items: flex-start;
            gap: 1.5rem;
            padding: 1.5rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
            transition: var(--transition-smooth);
        }

            .feature-item:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 40px rgba(212, 175, 55, 0.15);
            }

        .feature-icon {
            font-size: 2rem;
            color: var(--luxury-gold);
            margin-top: 0.5rem;
        }

        .feature-content h4 {
            color: var(--luxury-dark);
            margin-bottom: 0.5rem;
            font-weight: 700;
        }

        .feature-content p {
            margin: 0;
            color: #666;
            font-size: 0.95rem;
        }

        /* Values Section */
        .luxury-values-section {
            padding: 6rem 0;
            background: white;
        }

        .values-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2rem;
            margin-top: 4rem;
        }

        .value-card {
            text-align: center;
            padding: 3rem 2rem;
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
            border-radius: 20px;
            transition: var(--transition-smooth);
            border: 1px solid rgba(212, 175, 55, 0.1);
        }

            .value-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 60px rgba(212, 175, 55, 0.15);
                border-color: var(--luxury-gold);
            }

        .value-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 1.5rem;
            background: linear-gradient(135deg, var(--luxury-gold), var(--luxury-gold-light));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
        }

        .value-card h3 {
            color: var(--luxury-dark);
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .value-card p {
            color: #666;
            line-height: 1.6;
        }

        /* Team Section */
        .luxury-team-section {
            padding: 6rem 0;
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
        }

        .team-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 4rem;
        }

        .team-card {
            background: white;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0,0,0,0.08);
            transition: var(--transition-smooth);
        }

            .team-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 60px rgba(212, 175, 55, 0.2);
            }

        .team-image {
            position: relative;
            height: 300px;
            overflow: hidden;
        }

            .team-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: var(--transition-smooth);
            }

        .team-card:hover .team-image img {
            transform: scale(1.1);
        }

        .team-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(212, 175, 55, 0.9), rgba(232, 197, 71, 0.8));
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: var(--transition-smooth);
        }

        .team-card:hover .team-overlay {
            opacity: 1;
        }

        .team-social {
            display: flex;
            gap: 1rem;
        }

            .team-social a {
                width: 50px;
                height: 50px;
                background: white;
                border-radius: 50%;
                display: flex;
                align-items: center;
                justify-content: center;
                color: var(--luxury-gold);
                text-decoration: none;
                transition: var(--transition-smooth);
            }

                .team-social a:hover {
                    transform: scale(1.1);
                    background: var(--luxury-dark);
                    color: white;
                }

        .team-info {
            padding: 2rem;
            text-align: center;
        }

            .team-info h3 {
                color: var(--luxury-dark);
                margin-bottom: 0.5rem;
                font-weight: 700;
            }

        .team-role {
            color: var(--luxury-gold);
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            font-size: 0.85rem;
            margin-bottom: 1rem;
        }

        .team-desc {
            color: #666;
            line-height: 1.6;
        }

        /* Stats Section */
        .luxury-stats-section {
            padding: 4rem 0;
            background: linear-gradient(135deg, var(--luxury-dark) 0%, #1a1a1a 100%);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
        }

        .stat-item-large {
            text-align: center;
            color: white;
        }

        .stat-number-large {
            font-size: 3.5rem;
            font-weight: 800;
            color: var(--luxury-gold);
            margin-bottom: 1rem;
        }

        .stat-label-large {
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            opacity: 0.8;
        }

        /* CTA Section */
        .luxury-cta-section {
            padding: 6rem 0;
            background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
            text-align: center;
        }

        .cta-content h2 {
            font-size: 2.5rem;
            color: var(--luxury-dark);
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .cta-content p {
            font-size: 1.2rem;
            color: #666;
            margin-bottom: 3rem;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .cta-buttons {
            display: flex;
            gap: 1.5rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .story-image {
                height: 400px;
            }

            .story-badge {
                bottom: 1rem;
                right: 1rem;
                padding: 1rem;
            }

            .badge-year {
                font-size: 1.5rem;
            }

            .feature-item {
                flex-direction: column;
                text-align: center;
            }

            .values-grid {
                grid-template-columns: 1fr;
            }

            .team-grid {
                grid-template-columns: 1fr;
            }

            .stat-number-large {
                font-size: 2.5rem;
            }

            .cta-content h2 {
                font-size: 2rem;
            }

            .cta-buttons {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
}