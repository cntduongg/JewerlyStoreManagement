@{
    ViewBag.Title = "Trang Sức Cao Cấp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Luxury Hero Section with Particles -->
<section class="luxury-hero-section">
    <div class="particles-background" id="particles"></div>
    <div class="luxury-hero-overlay"></div>
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="luxury-hero-content" data-aos="fade-right">
                    <div class="luxury-badge-top">COLLECTION 2024</div>
                    <h1 class="luxury-title">
                        <span class="luxury-accent">BỘ SƯU TẬP</span>
                        <span class="luxury-main">TRANG SỨC CAO CẤP</span>
                    </h1>
                    <p class="luxury-subtitle">
                        Khám phá những tác phẩm nghệ thuật tinh xảo, nơi truyền thống giao thoa với hiện đại
                    </p>
                    <div class="luxury-cta">
                        <button class="btn-luxury-primary" onclick="scrollToProducts()">
                            <span>KHÁM PHÁ NGAY</span>
                            <i class="fas fa-arrow-down"></i>
                        </button>
                        <button class="btn-luxury-outline">
                            <i class="fas fa-phone"></i>
                            <span>TƯ VẤN</span>
                        </button>
                    </div>
                    <div class="luxury-stats">
                        <div class="stat-item">
                            <div class="stat-number">10+</div>
                            <div class="stat-label">Năm Kinh Nghiệm</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">5000+</div>
                            <div class="stat-label">Khách Hàng</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">100%</div>
                            <div class="stat-label">Hài Lòng</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="luxury-hero-image" data-aos="fade-left">
                    <div class="floating-jewelry">
                        <div class="jewel-glow"></div>
                        <img src="https://static.vecteezy.com/system/resources/previews/011/144/540/non_2x/jewelry-ring-abstract-logo-template-design-with-luxury-diamonds-or-gems-isolated-on-black-and-white-background-logo-can-be-for-jewelry-brands-and-signs-free-vector.jpg"
                             alt="Luxury Jewelry" class="jewel-floating">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="luxury-scroll-indicator">
        <div class="scroll-arrow"></div>
        <span>Cuộn xuống</span>
    </div>
</section>

<!-- Luxury Filter Section -->
<section class="luxury-filter-section" id="productsSection">
    <div class="container">
        <div class="luxury-section-header" data-aos="fade-up">
            <div class="section-top-line"></div>
            <h2 class="section-title-luxury">BỘ SƯU TẬP ĐỘC QUYỀN</h2>
            <p class="section-subtitle">Những thiết kế tinh tế dành riêng cho bạn</p>
        </div>

        <div class="luxury-filter-container" data-aos="fade-up" data-aos-delay="100">
            <div class="filter-group-luxury">
                <div class="filter-item">
                    <i class="fas fa-gem filter-icon"></i>
                    <select id="categoryFilter" class="luxury-select">
                        <option value="">TẤT CẢ DANH MỤC</option>
                        <option value="1">NHẪN CAO CẤP</option>
                        <option value="2">DÂY CHUYỀN SANG TRỌNG</option>
                        <option value="3">VÒNG TAY TINH XẢO</option>
                        <option value="4">BÔNG TAI LẤP LÁNH</option>
                        <option value="5">MẶT DÂY ĐỘC ĐÁO</option>
                    </select>
                </div>

                <div class="filter-item">
                    <i class="fas fa-search filter-icon"></i>
                    <div class="luxury-search-container">
                        <input type="text" id="searchInput" class="luxury-search" placeholder="Tìm kiếm thiết kế độc quyền...">
                        <button class="search-btn-luxury" onclick="handleSearch()">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Luxury Products Carousel with Auto-Scroll -->
<section class="luxury-carousel-section">
    <div class="container-fluid">
        <div class="luxury-carousel-container">
            <!-- Auto-scroll indicator -->
            <div class="auto-scroll-controls">
                <button class="auto-scroll-toggle" id="autoScrollToggle" onclick="toggleAutoScroll()">
                    <i class="fas fa-pause"></i>
                </button>
                <span class="auto-scroll-label">Tự động chuyển</span>
            </div>

            <div id="productsCarousel" class="luxury-carousel-wrapper">
                <!-- PRODUCTS WILL BE LOADED HERE BY JAVASCRIPT -->
            </div>

            <!-- Luxury Navigation -->
            <button class="luxury-nav-btn luxury-nav-prev" onclick="scrollLuxuryProducts(-1)">
                <i class="fas fa-chevron-left"></i>
            </button>
            <button class="luxury-nav-btn luxury-nav-next" onclick="scrollLuxuryProducts(1)">
                <i class="fas fa-chevron-right"></i>
            </button>

            <!-- Progress Indicators -->
            <div class="carousel-progress" id="carouselProgress"></div>
        </div>
    </div>
</section>

<!-- Loading States -->
<div id="loadingSpinner" class="luxury-loading">
    <div class="luxury-spinner">
        <div class="diamond-spinner">
            <div class="diamond-inner"></div>
        </div>
        <p>Đang tải bộ sưu tập...</p>
    </div>
</div>

<div id="emptyState" class="luxury-empty-state" style="display: none;">
    <div class="empty-content">
        <i class="fas fa-gem"></i>
        <h3>Chưa có thiết kế nào</h3>
        <p>Bộ sưu tập đang được cập nhật</p>
    </div>
</div>

<div id="errorState" class="luxury-error-state" style="display: none;">
    <div class="error-content">
        <i class="fas fa-exclamation-triangle"></i>
        <h3 id="errorMessage">Đã xảy ra lỗi</h3>
        <button class="btn-luxury-secondary" onclick="loadProducts()">
            THỬ LẠI
        </button>
    </div>
</div>

@section Scripts {
    <script>
        // ==================================================
        // CONFIGURATION
        // ==================================================
        const API_URL = 'https://localhost:7114/api/Products/GetAllProducts';
        let autoScrollInterval = null;
        let isAutoScrolling = true;
        let currentProducts = [];

        // ==================================================
        // LUXURY FUNCTIONS
        // ==================================================
        async function loadProducts() {
            showLuxuryLoading();
            hideLuxuryError();

            try {
                console.log('Fetching luxury collection...');
                const response = await fetch(API_URL);

                if (response.ok) {
                    const products = await response.json();
                    currentProducts = products;
                    displayLuxuryProducts(products);
                    initAutoScroll();
                } else {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
            } catch (error) {
                console.error('Luxury API Error:', error);
                showLuxuryError('Không thể tải bộ sưu tập: ' + error.message);
                currentProducts = getMockProducts();
                displayLuxuryProducts(currentProducts);
                initAutoScroll();
            } finally {
                hideLuxuryLoading();
            }
        }

        function displayLuxuryProducts(products) {
            const carousel = document.getElementById('productsCarousel');
            const emptyState = document.getElementById('emptyState');
            const progressContainer = document.getElementById('carouselProgress');

            carousel.innerHTML = '';
            progressContainer.innerHTML = '';

            if (!products || products.length === 0) {
                emptyState.style.display = 'flex';
                return;
            }

            emptyState.style.display = 'none';

            // Sắp xếp sản phẩm mới nhất lên đầu
            const sortedProducts = products.sort((a, b) => b.productId - a.productId);
            const displayProducts = sortedProducts.slice(0, 12);

            displayProducts.forEach((product, index) => {
                const imageUrl = getLuxuryImageUrl(product);

                const productHtml = `
                    <div class="luxury-product-card" data-aos="fade-up" data-aos-delay="${index * 50}">
                        <div class="product-card-inner">
                            <div class="product-image-container">
                                <div class="product-shine"></div>
                                <img src="${imageUrl}"
                                     alt="${product.productName}"
                                     class="luxury-product-image">
                                <div class="product-overlay">
                                    <div class="luxury-badge-card">${product.hasGem ? 'CÓ ĐÁ QUÝ' : 'KHÔNG CÓ ĐÁ'}</div>
                                    <button class="quick-view-btn" onclick="viewProductDetail(${product.productId})">
                                        <i class="fas fa-eye"></i>
                                        XEM CHI TIẾT
                                    </button>
                                </div>
                            </div>

                            <div class="luxury-product-info">
                                <div class="product-category">${product.categoryName || 'TRANG SỨC CAO CẤP'}</div>
                                <h3 class="product-title">${product.productName}</h3>
                                <p class="product-description">${product.shortDescription || 'Thiết kế độc quyền sang trọng'}</p>

                                <div class="product-specs">
                                    <div class="spec-item">
                                        <i class="fas fa-weight-hanging"></i>
                                        <span>${getGoldWeightDisplay(product)}</span>
                                    </div>
                                    <div class="spec-item">
                                        <i class="fas fa-gem"></i>
                                        <span>${product.material || 'Vàng 18K'}</span>
                                    </div>
                                </div>

                                <div class="product-price-section">
                                    <div class="price-wrapper">
                                        <div class="price">${formatCurrency(product.sellingPrice)}</div>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                carousel.innerHTML += productHtml;

                // Create progress indicator
                const dot = document.createElement('div');
                dot.className = 'progress-dot';
                if (index === 0) dot.classList.add('active');
                dot.onclick = () => scrollToProduct(index);
                progressContainer.appendChild(dot);
            });

            updateProgressDots();
        }

        // ==================================================
        // AUTO-SCROLL FUNCTIONALITY
        // ==================================================
        function initAutoScroll() {
            if (autoScrollInterval) {
                clearInterval(autoScrollInterval);
            }

            if (isAutoScrolling) {
                autoScrollInterval = setInterval(() => {
                    const carousel = document.getElementById('productsCarousel');
                    const maxScroll = carousel.scrollWidth - carousel.clientWidth;

                    if (carousel.scrollLeft >= maxScroll - 10) {
                        carousel.scrollTo({ left: 0, behavior: 'smooth' });
                    } else {
                        carousel.scrollBy({ left: 340, behavior: 'smooth' });
                    }
                }, 3000);
            }
        }

        function toggleAutoScroll() {
            isAutoScrolling = !isAutoScrolling;
            const toggleBtn = document.getElementById('autoScrollToggle');

            if (isAutoScrolling) {
                toggleBtn.innerHTML = '<i class="fas fa-pause"></i>';
                initAutoScroll();
            } else {
                toggleBtn.innerHTML = '<i class="fas fa-play"></i>';
                if (autoScrollInterval) {
                    clearInterval(autoScrollInterval);
                }
            }
        }

        function scrollLuxuryProducts(direction) {
            const carousel = document.getElementById('productsCarousel');
            const scrollAmount = 340;

            carousel.scrollBy({
                left: direction * scrollAmount,
                behavior: 'smooth'
            });

            // Pause auto-scroll temporarily
            if (isAutoScrolling) {
                clearInterval(autoScrollInterval);
                setTimeout(() => initAutoScroll(), 5000);
            }
        }

        function scrollToProduct(index) {
            const carousel = document.getElementById('productsCarousel');
            const scrollAmount = index * 340;

            carousel.scrollTo({
                left: scrollAmount,
                behavior: 'smooth'
            });

            updateProgressDots();
        }

        function updateProgressDots() {
            const carousel = document.getElementById('productsCarousel');
            const dots = document.querySelectorAll('.progress-dot');

            carousel.addEventListener('scroll', () => {
                const scrollPosition = carousel.scrollLeft;
                const cardWidth = 340;
                const activeIndex = Math.round(scrollPosition / cardWidth);

                dots.forEach((dot, index) => {
                    if (index === activeIndex) {
                        dot.classList.add('active');
                    } else {
                        dot.classList.remove('active');
                    }
                });
            });
        }

        function scrollToProducts() {
            document.getElementById('productsSection').scrollIntoView({
                behavior: 'smooth'
            });
        }

        // ==================================================
        // UTILITY FUNCTIONS
        // ==================================================
        function getLuxuryImageUrl(product) {
            const rawImageUrl = product.mainImageUrl || product.MainImageUrl;

            if (!rawImageUrl || rawImageUrl.includes('img00') || !rawImageUrl.startsWith('http')) {
                const luxuryImages = {
                    1: 'https://images.unsplash.com/photo-1605100804763-247f67b3557e?w=400&h=400&fit=crop',
                    2: 'https://images.unsplash.com/photo-1599643478518-a784e5dc4c8f?w=400&h=400&fit=crop',
                    3: 'https://images.unsplash.com/photo-1588444650700-6c7f0c89d36b?w=400&h=400&fit=crop',
                    4: 'https://images.unsplash.com/photo-1535632066927-ab7c9ab60908?w=400&h=400&fit=crop',
                    5: 'https://images.unsplash.com/photo-1515562141207-7a88fb7ce338?w=400&h=400&fit=crop'
                };
                return luxuryImages[product.categoryId] || luxuryImages[2];
            }
            return rawImageUrl;
        }

        function formatCurrency(amount) {
            if (!amount && amount !== 0) return 'LIÊN HỆ';
            return new Intl.NumberFormat('vi-VN', {
                style: 'currency',
                currency: 'VND'
            }).format(amount);
        }

        function getGoldWeightDisplay(product) {
            const goldWeight = product.goldWeight || product.GoldWeight || product.goldweight;
            if (!goldWeight && goldWeight !== 0) return 'Vàng cao cấp';
            if (goldWeight === 0) return 'Bạch kim';
            return `${goldWeight}g vàng`;
        }

        function showLuxuryLoading() {
            document.getElementById('loadingSpinner').style.display = 'flex';
        }

        function hideLuxuryLoading() {
            document.getElementById('loadingSpinner').style.display = 'none';
        }

        function showLuxuryError(message) {
            document.getElementById('errorMessage').textContent = message;
            document.getElementById('errorState').style.display = 'flex';
        }

        function hideLuxuryError() {
            document.getElementById('errorState').style.display = 'none';
        }

        function viewProductDetail(productId) {
            console.log('Viewing product:', productId);
        }

        function handleSearch() {
            const searchTerm = document.getElementById('searchInput').value;
            console.log('Searching for:', searchTerm);
        }

        function getMockProducts() {
            return [
                {
                    productId: 1,
                    productName: "Nhẫn Vàng 18K Kim Cương",
                    categoryName: "NHẪN CAO CẤP",
                    sellingPrice: 18500000,
                    goldWeight: 5.2,
                    material: "Vàng 18K",
                    hasGem: true,
                    shortDescription: "Nhẫn vàng cao cấp đính kim cương tự nhiên"
                }
            ];
        }

        // ==================================================
        // PARTICLES EFFECT
        // ==================================================
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 50;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 20 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        // ==================================================
        // INITIALIZATION
        // ==================================================
        document.addEventListener('DOMContentLoaded', function() {
            loadProducts();
            createParticles();

            // Pause auto-scroll on hover
            const carousel = document.getElementById('productsCarousel');
            carousel.addEventListener('mouseenter', () => {
                if (autoScrollInterval) {
                    clearInterval(autoScrollInterval);
                }
            });

            carousel.addEventListener('mouseleave', () => {
                if (isAutoScrolling) {
                    initAutoScroll();
                }
            });
        });
    </script>

    <style>
        /* ==================== LUXURY VARIABLES ==================== */
        :root {
            --luxury-gold: #D4AF37;
            --luxury-gold-light: #E8C547;
            --luxury-gold-dark: #B8941F;
            --luxury-dark: #0a0a0a;
            --luxury-dark-secondary: #1a1a1a;
            --luxury-light: #f8f9fa;
            --luxury-accent: #c19b53;
            --luxury-border: rgba(212, 175, 55, 0.3);
            --transition-smooth: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        /* ==================== PARTICLES BACKGROUND ==================== */
        .particles-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .particle {
            position: absolute;
            width: 2px;
            height: 2px;
            background: var(--luxury-gold);
            border-radius: 50%;
            animation: float 20s infinite;
            opacity: 0.3;
        }

        @@keyframes float {
            0%, 100% {
                transform: translate(0, 0);
            }
            25% {
                transform: translate(100px, -100px);
            }
            50% {
                transform: translate(-50px, -200px);
            }
            75% {
                transform: translate(-100px, -100px);
            }
        }

        /* ==================== LUXURY HERO SECTION ==================== */
        .luxury-hero-section {
            position: relative;
            min-height: 100vh;
            background: linear-gradient(135deg, #000000 0%, #1a1a1a 50%, #0a0a0a 100%);
            overflow: hidden;
            display: flex;
            align-items: center;
        }

        .luxury-hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at 30% 50%, rgba(212, 175, 55, 0.1) 0%, transparent 60%);
            z-index: 1;
        }

        .luxury-hero-content {
            position: relative;
            z-index: 2;
            color: white;
        }

        .luxury-badge-top {
            display: inline-block;
            padding: 0.5rem 1.5rem;
            background: rgba(212, 175, 55, 0.1);
            border: 1px solid var(--luxury-gold);
            border-radius: 50px;
            color: var(--luxury-gold);
            font-size: 0.75rem;
            letter-spacing: 0.2em;
            margin-bottom: 2rem;
            font-weight: 600;
        }

        .luxury-title {
            font-size: clamp(2.5rem, 5vw, 4.5rem);
            font-weight: 300;
            line-height: 1.1;
            margin-bottom: 1.5rem;
        }

        .luxury-accent {
            display: block;
            font-size: clamp(1rem, 2vw, 1.5rem);
            color: var(--luxury-gold);
            letter-spacing: 0.3em;
            margin-bottom: 0.5rem;
            font-weight: 300;
        }

        .luxury-main {
            display: block;
            font-size: clamp(2rem, 4vw, 3.5rem);
            font-weight: 600;
            background: linear-gradient(135deg, #ffffff 0%, var(--luxury-gold) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .luxury-subtitle {
            font-size: clamp(1rem, 1.5vw, 1.2rem);
            color: rgba(255, 255, 255, 0.7);
            margin-bottom: 3rem;
            max-width: 500px;
            line-height: 1.6;
        }

        /* ==================== LUXURY BUTTONS ==================== */
        .luxury-cta {
            display: flex;
            gap: 1.5rem;
            flex-wrap: wrap;
            margin-bottom: 3rem;
        }

        .btn-luxury-primary {
            background: linear-gradient(135deg, var(--luxury-gold) 0%, var(--luxury-gold-light) 100%);
            border: none;
            padding: 1.2rem 2.5rem;
            color: var(--luxury-dark);
            font-weight: 700;
            border-radius: 50px;
            display: inline-flex;
            align-items: center;
            gap: 1rem;
            cursor: pointer;
            transition: var(--transition-smooth);
            text-transform: uppercase;
            letter-spacing: 0.1em;
            font-size: 0.9rem;
            box-shadow: 0 10px 40px rgba(212, 175, 55, 0.3);
            position: relative;
            overflow: hidden;
        }

        .btn-luxury-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.5s;
        }

        .btn-luxury-primary:hover::before {
            left: 100%;
        }

        .btn-luxury-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 50px rgba(212, 175, 55, 0.5);
        }

        .btn-luxury-outline {
            background: transparent;
            border: 2px solid var(--luxury-gold);
            padding: 1.2rem 2.5rem;
            color: var(--luxury-gold);
            font-weight: 700;
            border-radius: 50px;
            display: inline-flex;
            align-items: center;
            gap: 1rem;
            cursor: pointer;
            transition: var(--transition-smooth);
            text-transform: uppercase;
            letter-spacing: 0.1em;
            font-size: 0.9rem;
        }

        .btn-luxury-outline:hover {
            background: var(--luxury-gold);
            color: var(--luxury-dark);
            transform: translateY(-3px);
        }

        /* ==================== LUXURY STATS ==================== */
        .luxury-stats {
            display: flex;
            gap: 3rem;
            flex-wrap: wrap;
        }

        .stat-item {
            text-align: left;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--luxury-gold);
            margin-bottom: 0.5rem;
        }

        .stat-label {
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.6);
            text-transform: uppercase;
            letter-spacing: 0.1em;
        }

        /* ==================== FLOATING JEWELRY ==================== */
        .luxury-hero-image {
            position: relative;
            z-index: 2;
        }

        .floating-jewelry {
            position: relative;
            width: 500px;
            height: 500px;
            margin: 0 auto;
        }

        .jewel-glow {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(212, 175, 55, 0.4) 0%, transparent 70%);
            border-radius: 50%;
            animation: pulse 3s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100% {
                transform: translate(-50%, -50%) scale(1);
                opacity: 0.5;
            }
            50% {
                transform: translate(-50%, -50%) scale(1.1);
                opacity: 0.8;
            }
        }

        .jewel-floating {
            position: relative;
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
            animation: floatJewel 6s ease-in-out infinite;
            box-shadow: 0 30px 80px rgba(212, 175, 55, 0.4);
            border: 3px solid rgba(212, 175, 55, 0.3);
        }

        @@keyframes floatJewel {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }
            50% {
                transform: translateY(-30px) rotate(5deg);
            }
        }

        /* ==================== SCROLL INDICATOR ==================== */
        .luxury-scroll-indicator {
            position: absolute;
