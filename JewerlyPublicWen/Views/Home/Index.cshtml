            --luxury-dark: #0a0a0a;
            --luxury-dark-secondary: #1a1a1a;
            --luxury-light: #f8f9fa;
            --luxury-accent: #c19b53;
            --luxury-border: rgba(212, 175, 55, 0.3);
            --transition-smooth: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

