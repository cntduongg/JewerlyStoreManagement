        <span>Cuộn xuống</span>
    </div>
</section>

<!-- Phần bộ lọc sản phẩm -->
<section class="luxury-filter-section" id="productsSection">
    <div class="container">
        <div class="luxury-section-header" data-aos="fade-up">
            <div class="section-top-line"></div>
            <h2 class="section-title-luxury">BỘ SƯU TẬP ĐỘC QUYỀN</h2>
            <p class="section-subtitle">Những thiết kế tinh tế dành riêng cho bạn</p>
        </div>

        <div class="luxury-filter-container" data-aos="fade-up" data-aos-delay="100">
            <div class="filter-group-luxury">
                <div class="filter-item">
                    <i class="fas fa-gem filter-icon"></i>
                    <select id="categoryFilter" class="luxury-select">
                        <option value="">TẤT CẢ DANH MỤC</option>
                        <option value="1">NHẪN CAO CẤP</option>
                        <option value="2">DÂY CHUYỀN SANG TRỌNG</option>
                        <option value="3">VÒNG TAY TINH XẢO</option>
                        <option value="4">BÔNG TAI LẤP LÁNH</option>
                        <option value="5">MẶT DÂY ĐỘC ĐÁO</option>
                    </select>
                </div>

                <div class="filter-item">
                    <i class="fas fa-search filter-icon"></i>
                    <div class="luxury-search-container">
                        <input type="text" id="searchInput" class="luxury-search" placeholder="Tìm kiếm thiết kế độc quyền...">
                        <button class="search-btn-luxury" onclick="handleSearch()">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Phần carousel sản phẩm với tự động cuộn -->
<section class="luxury-carousel-section">
    <div class="container-fluid">
        <div class="luxury-carousel-container">
            <!-- Nút điều khiển tự động cuộn -->
            <div class="auto-scroll-controls">
                <button class="auto-scroll-toggle" id="autoScrollToggle" onclick="toggleAutoScroll()">
                    <i class="fas fa-pause"></i>
                </button>
                <span class="auto-scroll-label">Tự động chuyển</span>
            </div>

            <!-- Container carousel sản phẩm -->
            <div id="productsCarousel" class="luxury-carousel-wrapper">
                <!-- Sản phẩm sẽ được load bởi JavaScript -->
            </div>

            <!-- Nút điều hướng -->
            <button class="luxury-nav-btn luxury-nav-prev" onclick="scrollLuxuryProducts(-1)">
                <i class="fas fa-chevron-left"></i>
            </button>
            <button class="luxury-nav-btn luxury-nav-next" onclick="scrollLuxuryProducts(1)">
                <i class="fas fa-chevron-right"></i>
            </button>

            <!-- Thanh tiến trình -->
            <div class="carousel-progress" id="carouselProgress"></div>
        </div>
    </div>
</section>

<!-- Trạng thái đang tải -->
<div id="loadingSpinner" class="luxury-loading">
    <div class="luxury-spinner">
        <div class="diamond-spinner">
            <div class="diamond-inner"></div>
        </div>
        <p>Đang tải bộ sưu tập...</p>
    </div>
</div>

<!-- Trạng thái không có sản phẩm -->
<div id="emptyState" class="luxury-empty-state" style="display: none;">
    <div class="empty-content">
        <i class="fas fa-gem"></i>
        <h3>Chưa có thiết kế nào</h3>
        <p>Bộ sưu tập đang được cập nhật</p>
    </div>
</div>

<!-- Trạng thái lỗi -->
<div id="errorState" class="luxury-error-state" style="display: none;">
    <div class="error-content">
        <i class="fas fa-exclamation-triangle"></i>
        <h3 id="errorMessage">Đã xảy ra lỗi</h3>
        <button class="btn-luxury-secondary" onclick="loadProducts()">
            THỬ LẠI
        </button>
    </div>
</div>

@section Scripts {
    <script>
        // ==================================================
        // CẤU HÌNH CHUNG
        // ==================================================
        const API_URL = 'https://localhost:7114/api/Products/GetAllProducts';
        let autoScrollInterval = null; // Interval cho tự động cuộn
        let isAutoScrolling = true; // Trạng thái tự động cuộn
        let currentProducts = []; // Danh sách sản phẩm hiện tại

        // ==================================================
        // HÀM CHÍNH
        // ==================================================

        // Hàm tải sản phẩm từ API
        async function loadProducts() {
            showLuxuryLoading();
            hideLuxuryError();

            try {
                console.log('Đang tải bộ sưu tập...');
                const response = await fetch(API_URL);

                if (response.ok) {
                    const products = await response.json();
                    currentProducts = products;
                    displayLuxuryProducts(products);
                    initAutoScroll();
                } else {
                    throw new Error(`Lỗi HTTP! Mã trạng thái: ${response.status}`);
                }
            } catch (error) {
                console.error('Lỗi API:', error);
                showLuxuryError('Không thể tải bộ sưu tập: ' + error.message);
            } finally {
                hideLuxuryLoading();
            }
        }

        // Hàm hiển thị sản phẩm trong carousel
        function displayLuxuryProducts(products) {
            const carousel = document.getElementById('productsCarousel');
            const emptyState = document.getElementById('emptyState');
            const progressContainer = document.getElementById('carouselProgress');

            carousel.innerHTML = '';
            progressContainer.innerHTML = '';

            if (!products || products.length === 0) {
                emptyState.style.display = 'flex';
                return;
            }

            emptyState.style.display = 'none';

            // Sắp xếp sản phẩm mới nhất lên đầu
            const sortedProducts = products.sort((a, b) => b.productId - a.productId);
            const displayProducts = sortedProducts.slice(0, 12);

            // Tạo HTML cho từng sản phẩm
            displayProducts.forEach((product, index) => {
                const imageUrl = getLuxuryImageUrl(product);

                const productHtml = `
                    <div class="luxury-product-card" data-aos="fade-up" data-aos-delay="${index * 50}">
                        <div class="product-card-inner">
                            <div class="product-image-container">
                                <div class="product-shine"></div>
                                <img src="${imageUrl}"
                                     alt="${product.productName}"
                                     class="luxury-product-image">
                                <div class="product-overlay">
                                    <div class="luxury-badge-card">${product.hasGem ? 'CÓ ĐÁ QUÝ' : 'KHÔNG CÓ ĐÁ'}</div>
                                    <button class="quick-view-btn" onclick="viewProductDetail(${product.productId})">
                                        <i class="fas fa-eye"></i>
                                        XEM CHI TIẾT
                                    </button>
                                </div>
                            </div>

                            <div class="luxury-product-info">
                                <div class="product-category">${product.categoryName || 'TRANG SỨC CAO CẤP'}</div>
                                <h3 class="product-title">${product.productName}</h3>
                                <p class="product-description">${product.shortDescription || 'Thiết kế độc quyền sang trọng'}</p>

                                <div class="product-specs">
                                    <div class="spec-item">
                                        <i class="fas fa-weight-hanging"></i>
                                        <span>${getGoldWeightDisplay(product)}</span>
                                    </div>
                                    <div class="spec-item">
                                        <i class="fas fa-gem"></i>
                                        <span>${product.material || 'Vàng 18K'}</span>
                                    </div>
                                </div>

                                <div class="product-price-section">
                                    <div class="price-wrapper">
                                        <div class="price">${formatCurrency(product.sellingPrice)}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                carousel.innerHTML += productHtml;

                // Tạo chấm tiến trình
                const dot = document.createElement('div');
                dot.className = 'progress-dot';
                if (index === 0) dot.classList.add('active');
                dot.onclick = () => scrollToProduct(index);
                progressContainer.appendChild(dot);
            });

            updateProgressDots();
        }

        // ==================================================
        // CHỨC NĂNG TỰ ĐỘNG CUỘN
        // ==================================================

        // Khởi tạo tự động cuộn
        function initAutoScroll() {
            if (autoScrollInterval) {
                clearInterval(autoScrollInterval);
            }

            if (isAutoScrolling) {
                autoScrollInterval = setInterval(() => {
                    const carousel = document.getElementById('productsCarousel');
                    const maxScroll = carousel.scrollWidth - carousel.clientWidth;

                    if (carousel.scrollLeft >= maxScroll - 10) {
                        carousel.scrollTo({ left: 0, behavior: 'smooth' });
                    } else {
                        carousel.scrollBy({ left: 340, behavior: 'smooth' });
                    }
                }, 3000);
            }
        }

        // Bật/tắt tự động cuộn
        function toggleAutoScroll() {
            isAutoScrolling = !isAutoScrolling;
            const toggleBtn = document.getElementById('autoScrollToggle');

            if (isAutoScrolling) {
                toggleBtn.innerHTML = '<i class="fas fa-pause"></i>';
                initAutoScroll();
            } else {
                toggleBtn.innerHTML = '<i class="fas fa-play"></i>';
                if (autoScrollInterval) {
                    clearInterval(autoScrollInterval);
                }
            }
        }

        // Cuộn sản phẩm theo hướng
        function scrollLuxuryProducts(direction) {
            const carousel = document.getElementById('productsCarousel');
            const scrollAmount = 340;

            carousel.scrollBy({
                left: direction * scrollAmount,
                behavior: 'smooth'
            });

            // Tạm dừng tự động cuộn
            if (isAutoScrolling) {
                clearInterval(autoScrollInterval);
                setTimeout(() => initAutoScroll(), 5000);
            }
        }

        // Cuộn đến sản phẩm cụ thể
        function scrollToProduct(index) {
            const carousel = document.getElementById('productsCarousel');
            const scrollAmount = index * 340;

            carousel.scrollTo({
                left: scrollAmount,
                behavior: 'smooth'
            });

            updateProgressDots();
        }

        // Cập nhật các chấm tiến trình
        function updateProgressDots() {
            const carousel = document.getElementById('productsCarousel');
            const dots = document.querySelectorAll('.progress-dot');

            carousel.addEventListener('scroll', () => {
                const scrollPosition = carousel.scrollLeft;
                const cardWidth = 340;
                const activeIndex = Math.round(scrollPosition / cardWidth);

                dots.forEach((dot, index) => {
                    if (index === activeIndex) {
                        dot.classList.add('active');
                    } else {
                        dot.classList.remove('active');
                    }
                });
            });
        }

        // Cuộn đến phần sản phẩm
        function scrollToProducts() {
            document.getElementById('productsSection').scrollIntoView({
                behavior: 'smooth'
            });
        }

        // ==================================================
        // CÁC HÀM TIỆN ÍCH
        // ==================================================

        // Lấy URL hình ảnh sản phẩm
        function getLuxuryImageUrl(product) {
            const rawImageUrl = product.mainImageUrl || product.MainImageUrl;

            if (!rawImageUrl || rawImageUrl.includes('img00') || !rawImageUrl.startsWith('http')) {
                const luxuryImages = {
                    1: 'https://images.unsplash.com/photo-1605100804763-247f67b3557e?w=400&h=400&fit=crop',
                    2: 'https://images.unsplash.com/photo-1599643478518-a784e5dc4c8f?w=400&h=400&fit=crop',
                    3: 'https://images.unsplash.com/photo-1588444650700-6c7f0c89d36b?w=400&h=400&fit=crop',
                    4: 'https://images.unsplash.com/photo-1535632066927-ab7c9ab60908?w=400&h=400&fit=crop',
                    5: 'https://images.unsplash.com/photo-1515562141207-7a88fb7ce338?w=400&h=400&fit=crop'
                };
                return luxuryImages[product.categoryId] || luxuryImages[2];
            }
            return rawImageUrl;
        }

        // Định dạng tiền tệ
        function formatCurrency(amount) {
            if (!amount && amount !== 0) return 'LIÊN HỆ';
            return new Intl.NumberFormat('vi-VN', {
                style: 'currency',
                currency: 'VND'
            }).format(amount);
        }

        // Hiển thị trọng lượng vàng
        function getGoldWeightDisplay(product) {
            const goldWeight = product.goldWeight || product.GoldWeight || product.goldweight;
            if (!goldWeight && goldWeight !== 0) return 'Vàng cao cấp';
            if (goldWeight === 0) return 'Bạch kim';
            return `${goldWeight}g vàng`;
        }

        // Hiển thị trạng thái đang tải
        function showLuxuryLoading() {
            document.getElementById('loadingSpinner').style.display = 'flex';
        }

        // Ẩn trạng thái đang tải
        function hideLuxuryLoading() {
            document.getElementById('loadingSpinner').style.display = 'none';
        }

        // Hiển thị thông báo lỗi
        function showLuxuryError(message) {
            document.getElementById('errorMessage').textContent = message;
            document.getElementById('errorState').style.display = 'flex';
        }

        // Ẩn thông báo lỗi
        function hideLuxuryError() {
            document.getElementById('errorState').style.display = 'none';
        }

        // Xem chi tiết sản phẩm
        function viewProductDetail(productId) {
            window.location.href = `/Products/Details/${productId}`;
        }

        // Xử lý tìm kiếm
        function handleSearch() {
            const searchTerm = document.getElementById('searchInput').value;
            console.log('Tìm kiếm:', searchTerm);
        }

        // ==================================================
        // HIỆU ỨNG PARTICLES
        // ==================================================
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 50;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 20 + 's';
                particle.style.animationDuration = (Math.random() * 10 + 10) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        // ==================================================
        // KHỞI TẠO KHI TRANG TẢI XONG
        // ==================================================
        document.addEventListener('DOMContentLoaded', function() {
            loadProducts();
            createParticles();

            // Tạm dừng tự động cuộn khi hover
            const carousel = document.getElementById('productsCarousel');
            carousel.addEventListener('mouseenter', () => {
                if (autoScrollInterval) {
                    clearInterval(autoScrollInterval);
                }
            });

            carousel.addEventListener('mouseleave', () => {
                if (isAutoScrolling) {
                    initAutoScroll();
                }
            });
        });
    </script>

    <style>
