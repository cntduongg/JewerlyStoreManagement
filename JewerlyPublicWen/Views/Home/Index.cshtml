@{
    ViewBag.Title = "Trang Sức Cao Cấp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Phần Hero với hiệu ứng particles -->
<section class="luxury-hero-section">
    <div class="particles-background" id="particles"></div>
    <div class="luxury-hero-overlay"></div>
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="luxury-hero-content" data-aos="fade-right">
                    <div class="luxury-badge-top">COLLECTION 2024</div>
                    <h1 class="luxury-title">
                        <span class="luxury-accent">BỘ SƯU TẬP</span>
                        <span class="luxury-main">TRANG SỨC CAO CẤP</span>
                    </h1>
                    <p class="luxury-subtitle">
                        Khám phá những tác phẩm nghệ thuật tinh xảo, nơi truyền thống giao thoa với hiện đại
