@using JewerlyPublicWen.Models.Dtos
@{
    ViewBag.Title = "Tất Cả Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header trang sản phẩm với hiệu ứng Parallax -->
<section class="luxury-products-header-enhanced">
    <div class="parallax-background"></div>
    <div class="floating-particles"></div>
    <div class="header-overlay"></div>
    <div class="container">
        <div class="luxury-header-content" data-aos="zoom-in">
            <div class="luxury-badge-animated">
                <span class="badge-shine"></span>
                COLLECTION COMPLETE
            </div>
            <h1 class="enhanced-title">
                <span class="title-line">BỘ SƯU TẬP</span>
                <span class="title-main">TOÀN BỘ</span>
            </h1>
            <p class="enhanced-subtitle">
                <i class="fas fa-gem"></i>
                Khám phá tất cả thiết kế độc quyền của chúng tôi
                <i class="fas fa-gem"></i>
            </p>
            <div class="scroll-hint">
                <div class="scroll-mouse"></div>
                <span>Cuộn để khám phá</span>
            </div>
        </div>
    </div>
</section>

<!-- Phần bộ lọc và sắp xếp sản phẩm -->
<section class="luxury-controls-section-enhanced">
    <div class="container">
        <div class="glass-control-panel" data-aos="fade-up">
            <div class="control-panel-header">
                <h3><i class="fas fa-sliders-h"></i> BỘ LỌC & SẮP XẾP</h3>
                <button class="filter-toggle-btn" onclick="clearFilters()">
                    <i class="fas fa-redo"></i> Reset
                </button>
            </div>

            <div class="luxury-controls-grid-enhanced">
                <!-- Bộ lọc danh mục -->
                <div class="control-group-enhanced">
                    <label class="control-label">
                        <i class="fas fa-layer-group"></i>
                        DANH MỤC
                    </label>
                    <div class="filter-item-enhanced">
                        <select id="categoryFilter" class="luxury-select-enhanced" onchange="filterProducts()">
                            <option value="">Tất Cả Danh Mục</option>
                            <option value="1">Nhẫn</option>
                            <option value="2">Dây chuyền</option>
                            <option value="3">Vòng tay</option>
                            <option value="4">Bông tai</option>
                            <option value="5">Mặt dây</option>
                        </select>
                        <div class="select-arrow">
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                </div>

                <!-- Bộ lọc sắp xếp -->
                <div class="control-group-enhanced">
                    <label class="control-label">
                        <i class="fas fa-sort-amount-down"></i>
                        SẮP XẾP
                    </label>
                    <div class="filter-item-enhanced">
                        <select id="sortFilter" class="luxury-select-enhanced" onchange="sortProducts()">
                            <option value="newest">🆕 Mới Nhất</option>
                            <option value="price_asc">💰 Giá: Thấp → Cao</option>
                            <option value="price_desc">💎 Giá: Cao → Thấp</option>
                            <option value="name_asc">🔤 Tên: A-Z</option>
                            <option value="name_desc">🔠 Tên: Z-A</option>
                        </select>
                        <div class="select-arrow">
                            <i class="fas fa-chevron-down"></i>
                        </div>
                    </div>
                </div>

                <!-- Ô tìm kiếm -->
                <div class="control-group-enhanced search-group-full">
                    <label class="control-label">
                        <i class="fas fa-search"></i>
                        TÌM KIẾM
                    </label>
                    <div class="luxury-search-container-enhanced">
                        <input type="text" id="searchInput" class="luxury-search-enhanced"
                               placeholder="Nhập tên sản phẩm, danh mục..." onkeyup="handleSearch()">
                        <button class="search-btn-enhanced" onclick="handleSearch()">
                            <i class="fas fa-search"></i>
                            <span>Tìm</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Hiển thị số lượng kết quả tìm kiếm -->
            <div class="results-info-enhanced" id="resultsInfo">
                <div class="results-badge">
                    <i class="fas fa-check-circle"></i>
                    <span id="productCount">0</span> sản phẩm được tìm thấy
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Phần hiển thị danh sách sản phẩm -->
<section class="luxury-products-grid-section-enhanced">
    <div class="container">
        <!-- Trạng thái đang tải -->
        <div id="loadingSpinner" class="luxury-loading-enhanced">
            <div class="luxury-spinner-enhanced">
                <div class="diamond-spinner-3d">
                    <div class="diamond-face"></div>
                    <div class="diamond-face"></div>
                    <div class="diamond-face"></div>
                    <div class="diamond-face"></div>
                </div>
                <div class="loading-text">
                    <h3>Đang tải bộ sưu tập</h3>
                    <div class="loading-dots">
                        <span></span><span></span><span></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Grid hiển thị sản phẩm -->
        <div id="productsGrid" class="luxury-products-grid-enhanced">
            <!-- Sản phẩm sẽ được load vào đây -->
        </div>

        <!-- Trạng thái không có sản phẩm -->
        <div id="emptyState" class="luxury-empty-state-enhanced" style="display: none;">
            <div class="empty-content-enhanced">
                <div class="empty-icon-container">
                    <i class="fas fa-gem"></i>
                    <div class="icon-glow"></div>
                </div>
                <h3>Không tìm thấy sản phẩm</h3>
                <p>Hãy thử tìm kiếm với từ khóa khác hoặc thay đổi bộ lọc</p>
                <button class="btn-luxury-primary-enhanced" onclick="clearFilters()">
                    <i class="fas fa-redo"></i>
                    <span>Xóa Bộ Lọc</span>
                </button>
            </div>
        </div>

        <!-- Trạng thái lỗi -->
        <div id="errorState" class="luxury-error-state-enhanced" style="display: none;">
            <div class="error-content-enhanced">
                <div class="error-icon-container">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h3 id="errorMessage">Đã xảy ra lỗi</h3>
                <p>Vui lòng thử lại sau hoặc liên hệ với chúng tôi</p>
                <button class="btn-luxury-primary-enhanced" onclick="loadProducts()">
                    <i class="fas fa-sync-alt"></i>
                    <span>Thử Lại</span>
                </button>
            </div>
        </div>

        <!-- Phân trang -->
        <div id="pagination" class="luxury-pagination-enhanced" style="display: none;"></div>
    </div>
</section>

@section Scripts {
    <script>
        // ==================================================
        // CẤU HÌNH CHUNG
        // ==================================================
        const API_URL = 'https://localhost:7114/api/Products/GetAllProducts';
        let allProducts = []; // Lưu tất cả sản phẩm từ API
        let currentPage = 1; // Trang hiện tại
        const productsPerPage = 12; // Số sản phẩm mỗi trang
        let currentFilters = {
            category: '',
            search: '',
            sort: 'newest'
        };

        // ==================================================
        // HÀM CHÍNH
        // ==================================================

        // Hàm tải sản phẩm từ API
        async function loadProducts() {
            showLuxuryLoading();
            hideLuxuryError();
            hideEmptyState();

            try {
                console.log('Đang tải sản phẩm...');
                const response = await fetch(API_URL);

                if (response.ok) {
                    const products = await response.json();
                    allProducts = products;
                    applyFiltersAndDisplay();
                } else {
                    throw new Error(`Lỗi HTTP! Mã trạng thái: ${response.status}`);
                }
            } catch (error) {
                console.error('Lỗi khi tải sản phẩm:', error);
                showLuxuryError('Không thể tải sản phẩm: ' + error.message);
            } finally {
                hideLuxuryLoading();
            }
        }

        // Hàm áp dụng bộ lọc và hiển thị sản phẩm
        function applyFiltersAndDisplay() {
            let filteredProducts = [...allProducts];

            // Lọc theo danh mục
            if (currentFilters.category) {
                filteredProducts = filteredProducts.filter(product =>
                    product.categoryId == currentFilters.category
                );
            }

            // Lọc theo từ khóa tìm kiếm
            if (currentFilters.search) {
                const searchTerm = currentFilters.search.toLowerCase();
                filteredProducts = filteredProducts.filter(product =>
                    product.productName.toLowerCase().includes(searchTerm) ||
                    (product.categoryName && product.categoryName.toLowerCase().includes(searchTerm)) ||
                    (product.shortDescription && product.shortDescription.toLowerCase().includes(searchTerm))
                );
            }

            // Áp dụng sắp xếp
            filteredProducts = sortProductsList(filteredProducts, currentFilters.sort);

            // Cập nhật số lượng kết quả
            updateResultsCount(filteredProducts.length);

            // Hiển thị sản phẩm
            displayProductsGrid(filteredProducts);
            setupPagination(filteredProducts);
        }

        // Hàm hiển thị danh sách sản phẩm
        function displayProductsGrid(products) {
            const grid = document.getElementById('productsGrid');
            const emptyState = document.getElementById('emptyState');

            grid.innerHTML = '';

            if (!products || products.length === 0) {
                grid.style.display = 'none';
                emptyState.style.display = 'flex';
                document.getElementById('pagination').style.display = 'none';
                return;
            }

            grid.style.display = 'grid';
            emptyState.style.display = 'none';

            // Tính toán phân trang
            const startIndex = (currentPage - 1) * productsPerPage;
            const endIndex = startIndex + productsPerPage;
            const paginatedProducts = products.slice(startIndex, endIndex);

            // Tạo HTML cho từng sản phẩm
            paginatedProducts.forEach((product, index) => {
                const imageUrl = getLuxuryImageUrl(product);
                const animationDelay = (index % 12) * 50;

                const productHtml = `
                    <div class="luxury-product-card-enhanced" data-aos="fade-up" data-aos-delay="${animationDelay}">
                        <div class="product-card-inner-enhanced">
                            <div class="product-badge-corner ${product.hasGem ? 'has-gem' : 'no-gem'}">
                                <i class="fas ${product.hasGem ? 'fa-gem' : 'fa-circle'}"></i>
                                <span>${product.hasGem ? 'ĐÁ QUÝ' : 'KHÔNG ĐÁ'}</span>
                            </div>

                            <div class="product-image-container-enhanced">
                                <div class="image-glow"></div>
                                <img src="${imageUrl}"
                                     alt="${product.productName}"
                                     class="luxury-product-image-enhanced"
                                     loading="lazy">
                                <div class="product-overlay-enhanced">
                                    <button class="quick-view-btn-enhanced" onclick="viewProductDetail(${product.productId})">
                                        <i class="fas fa-eye"></i>
                                        <span>Xem Chi Tiết</span>
                                    </button>
                                </div>
                            </div>

                            <div class="product-info-enhanced">
                                <div class="product-category-badge">
                                    ${getCategoryIcon(product.categoryId)}
                                    ${product.categoryName || 'Trang Sức'}
                                </div>

                                <h3 class="product-title-enhanced">${product.productName}</h3>

                                <p class="product-description-enhanced">
                                    ${product.shortDescription || 'Thiết kế độc đáo, tinh xảo'}
                                </p>

                                <div class="product-specs-enhanced">
                                    <div class="spec-item-enhanced">
                                        <i class="fas fa-weight"></i>
                                        <span>${product.goldWeight ? product.goldWeight + 'g' : 'N/A'}</span>
                                    </div>
                                    <div class="spec-divider"></div>
                                    <div class="spec-item-enhanced">
                                        <i class="fas fa-gem"></i>
                                        <span>${product.gemWeight ? product.gemWeight + 'ct' : 'N/A'}</span>
                                    </div>
                                </div>

                                <div class="product-price-section-enhanced">
                                    <div class="price-label">Giá</div>
                                    <div class="price-value">${formatPrice(product.sellingPrice)}</div>
                                </div>

                                <button class="btn-view-detail-enhanced" onclick="viewProductDetail(${product.productId})">
                                    <span>Khám Phá Ngay</span>
                                    <i class="fas fa-arrow-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                `;

                grid.innerHTML += productHtml;
            });

            // Khởi tạo lại AOS cho các phần tử mới
            if (typeof AOS !== 'undefined') {
                AOS.refresh();
            }
        }

        // Hàm thiết lập phân trang
        function setupPagination(products) {
            const totalPages = Math.ceil(products.length / productsPerPage);
            const pagination = document.getElementById('pagination');

            if (totalPages <= 1) {
                pagination.style.display = 'none';
                return;
            }

            pagination.style.display = 'flex';
            pagination.innerHTML = '';

            // Nút Previous
            const prevBtn = document.createElement('button');
            prevBtn.className = 'pagination-btn-enhanced';
            prevBtn.innerHTML = '<i class="fas fa-chevron-left"></i>';
            prevBtn.disabled = currentPage === 1;
            prevBtn.onclick = () => {
                if (currentPage > 1) {
                    currentPage--;
                    applyFiltersAndDisplay();
                    scrollToTop();
                }
            };
            pagination.appendChild(prevBtn);

            // Hiển thị số trang
            const maxVisiblePages = 5;
            let startPage = Math.max(1, currentPage - Math.floor(maxVisiblePages / 2));
            let endPage = Math.min(totalPages, startPage + maxVisiblePages - 1);

            if (endPage - startPage < maxVisiblePages - 1) {
                startPage = Math.max(1, endPage - maxVisiblePages + 1);
            }

            // Trang đầu
            if (startPage > 1) {
                const firstBtn = createPageButton(1);
                pagination.appendChild(firstBtn);
                if (startPage > 2) {
                    const ellipsis = document.createElement('span');
                    ellipsis.className = 'pagination-ellipsis';
                    ellipsis.textContent = '...';
                    pagination.appendChild(ellipsis);
                }
            }

            // Các nút trang
            for (let i = startPage; i <= endPage; i++) {
                const pageBtn = createPageButton(i);
                pagination.appendChild(pageBtn);
            }

            // Trang cuối
            if (endPage < totalPages) {
                if (endPage < totalPages - 1) {
                    const ellipsis = document.createElement('span');
                    ellipsis.className = 'pagination-ellipsis';
                    ellipsis.textContent = '...';
                    pagination.appendChild(ellipsis);
                }
                const lastBtn = createPageButton(totalPages);
                pagination.appendChild(lastBtn);
            }

            // Nút Next
            const nextBtn = document.createElement('button');
            nextBtn.className = 'pagination-btn-enhanced';
            nextBtn.innerHTML = '<i class="fas fa-chevron-right"></i>';
            nextBtn.disabled = currentPage === totalPages;
            nextBtn.onclick = () => {
                if (currentPage < totalPages) {
                    currentPage++;
                    applyFiltersAndDisplay();
                    scrollToTop();
                }
            };
            pagination.appendChild(nextBtn);
        }

        // Hàm tạo nút trang
        function createPageButton(pageNum) {
            const btn = document.createElement('button');
            btn.className = `pagination-btn-enhanced ${pageNum === currentPage ? 'active' : ''}`;
            btn.textContent = pageNum;
            btn.onclick = () => {
                currentPage = pageNum;
                applyFiltersAndDisplay();
                scrollToTop();
            };
            return btn;
        }

        // Hàm cuộn lên đầu trang
        function scrollToTop() {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // ==================================================
        // CÁC HÀM LỌC VÀ SẮP XẾP
        // ==================================================

        // Hàm lọc sản phẩm theo danh mục
        function filterProducts() {
            const categoryId = document.getElementById('categoryFilter').value;
            currentFilters.category = categoryId;
            currentPage = 1;
            applyFiltersAndDisplay();
        }

        // Hàm sắp xếp sản phẩm
        function sortProducts() {
            currentFilters.sort = document.getElementById('sortFilter').value;
            currentPage = 1;
            applyFiltersAndDisplay();
        }

        // Hàm xử lý tìm kiếm
        function handleSearch() {
            currentFilters.search = document.getElementById('searchInput').value.trim();
            currentPage = 1;
            applyFiltersAndDisplay();
        }

        // Hàm xóa tất cả bộ lọc
        function clearFilters() {
            currentFilters = { category: '', search: '', sort: 'newest' };
            document.getElementById('categoryFilter').value = '';
            document.getElementById('sortFilter').value = 'newest';
            document.getElementById('searchInput').value = '';
            currentPage = 1;
            applyFiltersAndDisplay();
        }

        // Hàm sắp xếp danh sách sản phẩm theo tiêu chí
        function sortProductsList(products, sortType) {
            const sorted = [...products];

            switch (sortType) {
                case 'newest':
                    return sorted.sort((a, b) => b.productId - a.productId);
                case 'price_asc':
                    return sorted.sort((a, b) => (a.sellingPrice || 0) - (b.sellingPrice || 0));
                case 'price_desc':
                    return sorted.sort((a, b) => (b.sellingPrice || 0) - (a.sellingPrice || 0));
                case 'name_asc':
                    return sorted.sort((a, b) => a.productName.localeCompare(b.productName));
                case 'name_desc':
                    return sorted.sort((a, b) => b.productName.localeCompare(a.productName));
                default:
                    return sorted;
            }
        }

        // ==================================================
        // CÁC HÀM TIỆN ÍCH
        // ==================================================

        // Hàm lấy URL hình ảnh sản phẩm
        function getLuxuryImageUrl(product) {
            const rawImageUrl = product.mainImageUrl || product.MainImageUrl;

            // Nếu không có URL hoặc URL không hợp lệ, sử dụng ảnh mặc định
            if (!rawImageUrl || rawImageUrl.includes('img00') || !rawImageUrl.startsWith('http')) {
                const luxuryImages = {
                    1: 'https://images.unsplash.com/photo-1605100804763-247f67b3557e?w=400&h=400&fit=crop',
                    2: 'https://images.unsplash.com/photo-1599643478518-a784e5dc4c8f?w=400&h=400&fit=crop',
                    3: 'https://images.unsplash.com/photo-1588444650700-6c7f0c89d36b?w=400&h=400&fit=crop',
                    4: 'https://images.unsplash.com/photo-1535632066927-ab7c9ab60908?w=400&h=400&fit=crop',
                    5: 'https://images.unsplash.com/photo-1515562141207-7a88fb7ce338?w=400&h=400&fit=crop'
                };
                return luxuryImages[product.categoryId] || luxuryImages[2];
            }
            return rawImageUrl;
        }

        // Hàm lấy icon cho danh mục
        function getCategoryIcon(categoryId) {
            const icons = {
                1: '💍',
                2: '📿',
                3: '⌚',
                4: '💎',
                5: '🔶'
            };
            return icons[categoryId] || '✨';
        }

        // Hàm định dạng giá tiền
        function formatPrice(price) {
            const priceValue = price || 0;
            return priceValue.toLocaleString('vi-VN') + ' ₫';
        }

        // Hàm chuyển đến trang chi tiết sản phẩm
        function viewProductDetail(productId) {
            window.location.href = `/Products/Details/${productId}`;
        }

        // Hàm cập nhật số lượng kết quả tìm kiếm
        function updateResultsCount(count) {
            const countElement = document.getElementById('productCount');
            const resultsInfo = document.getElementById('resultsInfo');

            if (countElement) {
                // Hiệu ứng animation cho số lượng
                countElement.style.transform = 'scale(1.2)';
                setTimeout(() => {
                    countElement.textContent = count;
                    countElement.style.transform = 'scale(1)';
                }, 100);
            }

            resultsInfo.style.display = count > 0 ? 'block' : 'none';
        }

        // ==================================================
        // CÁC HÀM HIỂN THỊ TRẠNG THÁI
        // ==================================================

        // Hiển thị trạng thái đang tải
        function showLuxuryLoading() {
            document.getElementById('loadingSpinner').style.display = 'flex';
            document.getElementById('productsGrid').style.display = 'none';
        }

        // Ẩn trạng thái đang tải
        function hideLuxuryLoading() {
            document.getElementById('loadingSpinner').style.display = 'none';
        }

        // Hiển thị trạng thái lỗi
        function showLuxuryError(message) {
            const errorState = document.getElementById('errorState');
            const errorMessage = document.getElementById('errorMessage');
            errorMessage.textContent = message;
            errorState.style.display = 'flex';
        }

        // Ẩn trạng thái lỗi
        function hideLuxuryError() {
            document.getElementById('errorState').style.display = 'none';
        }

        // Ẩn trạng thái không có sản phẩm
        function hideEmptyState() {
            document.getElementById('emptyState').style.display = 'none';
        }

        // ==================================================
        // HIỆU ỨNG PARALLAX
        // ==================================================
        window.addEventListener('scroll', () => {
            const parallax = document.querySelector('.parallax-background');
            if (parallax) {
                const scrolled = window.pageYOffset;
                parallax.style.transform = `translateY(${scrolled * 0.5}px)`;
            }
        });

        // ==================================================
        // KHỞI TẠO KHI TRANG TẢI XONG
        // ==================================================
        document.addEventListener('DOMContentLoaded', () => {
            loadProducts();

            // Khởi tạo AOS animation
            if (typeof AOS !== 'undefined') {
                AOS.init({
                    duration: 800,
                    easing: 'ease-out-cubic',
                    once: true,
                    offset: 100
                });
            }
        });
    </script>

    <style>
        /* ==================================================
                   BIẾN CSS TOÀN CỤC
                   ================================================== */

        :root {
            --luxury-gold: #d4af37;
            --luxury-gold-light: #f4d03f;
            --luxury-gold-dark: #b8941f;
            --luxury-dark: #1a1a1a;
            --luxury-dark-light: #2d2d2d;
            --transition-smooth: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            --shadow-elevated: 0 20px 60px rgba(0,0,0,0.15);
            --shadow-soft: 0 10px 40px rgba(0,0,0,0.08);
        }

        /* ==================================================
                   PHẦN HEADER
                   ================================================== */

        .luxury-products-header-enhanced {
            position: relative;
            min-height: 60vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        }

        .parallax-background {
            position: absolute;
            top: -50%;
            left: 0;
            width: 100%;
            height: 200%;
            background: radial-gradient(circle at 20% 50%, rgba(212, 175, 55, 0.1) 0%, transparent 50%), radial-gradient(circle at 80% 80%, rgba(244, 208, 63, 0.08) 0%, transparent 50%);
            z-index: 1;
        }

        .floating-particles {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 2;
        }

            .floating-particles::before,
            .floating-particles::after {
                content: '';
                position: absolute;
                width: 300px;
                height: 300px;
                border-radius: 50%;
                background: radial-gradient(circle, rgba(212, 175, 55, 0.15) 0%, transparent 70%);
                animation: float 20s infinite ease-in-out;
            }

