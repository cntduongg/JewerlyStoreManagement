@{
    ViewData["Title"] = "Trang Chủ - Quản Lý Trang Sức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-center text-primary">
                <i class="fas fa-gem"></i> HỆ THỐNG QUẢN LÝ TRANG SỨC
            </h1>
            <p class="text-center text-muted">Quản lý bán hàng và dịch vụ trang sức chuyên nghiệp</p>
        </div>
    </div>

    <!-- Thông tin giá vàng -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h4 class="card-title">
                        <i class="fas fa-chart-line"></i> BẢNG GIÁ VÀNG HÔM NAY
                    </h4>
                    <div class="row">
                        <div class="col-md-3">
                            <h5>Vàng 24K</h5>
                            <p class="h4">1,850,000 đ/chỉ</p>
                        </div>
                        <div class="col-md-3">
                            <h5>Vàng 18K</h5>
                            <p class="h4">1,350,000 đ/chỉ</p>
                        </div>
                        <div class="col-md-3">
                            <h5>Vàng 14K</h5>
                            <p class="h4">1,050,000 đ/chỉ</p>
                        </div>
                        <div class="col-md-3">
                            <h5>Vàng 10K</h5>
                            <p class="h4">750,000 đ/chỉ</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Các chức năng chính -->
    <div class="row">
        <!-- Bán hàng -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-cash-register fa-3x text-success mb-3"></i>
                    <h5 class="card-title">BÁN HÀNG</h5>
                    <p class="card-text">Tạo đơn hàng, in hóa đơn và phiếu bảo hành</p>
                    <a href="@Url.Action("Index", "Sales")" class="btn btn-success btn-block">
                        <i class="fas fa-play"></i> Truy cập
                    </a>
                </div>
            </div>
        </div>

        <!-- Mua lại hàng -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-recycle fa-3x text-info mb-3"></i>
                    <h5 class="card-title">MUA LẠI HÀNG</h5>
                    <p class="card-text">Mua lại trang sức từ khách hàng</p>
                    <a href="@Url.Action("Index", "Purchase")" class="btn btn-info btn-block">
                        <i class="fas fa-play"></i> Truy cập
                    </a>
                </div>
            </div>
        </div>

        <!-- Quản lý kho -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-boxes fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">QUẢN LÝ KHO</h5>
                    <p class="card-text">Quản lý sản phẩm và bảng giá</p>
                    <a href="@Url.Action("Index", "Inventory")" class="btn btn-warning btn-block">
                        <i class="fas fa-play"></i> Truy cập
                    </a>
                </div>
            </div>
        </div>

        <!-- Khách hàng -->
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">KHÁCH HÀNG</h5>
                    <p class="card-text">Quản lý thông tin và tích lũy điểm</p>
                    <a href="@Url.Action("Index", "Customer")" class="btn btn-primary btn-block">
                        <i class="fas fa-play"></i> Truy cập
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê nhanh -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar"></i> THỐNG KÊ NHANH
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <h6 class="text-muted">DOANH THU HÔM NAY</h6>
                                <h4 class="text-success">25,850,000 đ</h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <h6 class="text-muted">ĐƠN HÀNG HÔM NAY</h6>
                                <h4 class="text-primary">15</h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <h6 class="text-muted">SẢN PHẨM TRONG KHO</h6>
                                <h4 class="text-warning">284</h4>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border rounded p-3">
                                <h6 class="text-muted">KHÁCH HÀNG MỚI</h6>
                                <h4 class="text-info">8</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Thông báo và chương trình khuyến mãi -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-bullhorn"></i> KHUYẾN MÃI ĐANG DIỄN RA
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <span class="badge badge-danger">MỚI</span> Giảm 10% cho khách hàng thân thiết
                        </li>
                        <li class="list-group-item">
                            <span class="badge badge-warning">HOT</span> Tích điểm 2x cho đơn hàng trên 5 triệu
                        </li>
                        <li class="list-group-item">
                            <span class="badge badge-info">ƯU ĐÃI</span> Miễn phí bảo hành trọn đời
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-bell"></i> THÔNG BÁO HỆ THỐNG
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <small class="text-muted">Hôm nay</small><br>
                            Cập nhật bảng giá vàng mới nhất
                        </li>
                        <li class="list-group-item">
                            <small class="text-muted">2 ngày trước</small><br>
                            Bảo trì hệ thống vào cuối tuần
                        </li>
                        <li class="list-group-item">
                            <small class="text-muted">1 tuần trước</small><br>
                            Thêm tính năng quét mã vạch mới
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: translateY(-5px);
        }
        .btn-block {
            border-radius: 20px;
        }
    </style>
}